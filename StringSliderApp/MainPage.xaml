<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:local="clr-namespace:StringSliderApp" 
             x:Class="StringSliderApp.MainPage"
             Title="Principal"
             >
    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Informe duas frases"
               FontSize="40"
               TextColor="White"
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand" />
        
        <Entry Placeholder="Informe uma palavra"
               x:Name="N1" />
        
        <Entry Placeholder="Informe outra palavra"
               x:Name="N2" />
        
        <Label Text="" 
               HorizontalOptions="Center" 
               VerticalOptions="CenterAndExpand"
               x:Name="Result"
               />
        
        <Button Text="Concatenar"
                HorizontalOptions="Center"
                BackgroundColor="Gray" 
                TextColor="White"
                FontSize="20"
                VerticalOptions="CenterAndExpand"
                Clicked="Concatenar"
                />
        
    </StackLayout>
</ContentPage>